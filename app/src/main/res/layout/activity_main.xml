<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="insert name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_number"
        android:hint="insert number"
        android:layout_above="@+id/bt_read"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:id="@+id/bt_insert"
        android:layout_below="@+id/et_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:layout_below="@+id/bt_insert"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ"
        android:id="@+id/bt_read"
        android:layout_alignTop="@+id/bt_insert"
        android:layout_toRightOf="@+id/bt_insert"
        android:layout_toEndOf="@+id/bt_insert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del"
        android:id="@+id/bt_del"
        android:layout_alignTop="@+id/bt_read"
        android:layout_toRightOf="@+id/bt_read"
        android:layout_toEndOf="@+id/bt_read" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/bt_update"
        android:layout_above="@+id/list_view"
        android:layout_toRightOf="@+id/bt_del"
        android:layout_toEndOf="@+id/bt_del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorting"
        android:id="@+id/sort"
        android:layout_above="@+id/bt_del"
        android:layout_toRightOf="@+id/bt_del"
        android:layout_toEndOf="@+id/bt_del" />

</RelativeLayout>
